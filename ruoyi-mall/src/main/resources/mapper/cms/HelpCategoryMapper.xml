<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.HelpCategoryMapper">

    <resultMap id="helpCategoryResult" type="com.ruoyi.cms.bean.HelpCategory">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sort" property="sort"/>
        <result column="is_show" property="isShow"/>
        <result column="del_flag" property="delFlag"/>
        <result column="crete_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="del_time" property="delTime"/>
    </resultMap>

    <select id="queryHelpCategory" parameterType="java.util.Map" resultMap="helpCategoryResult">
        SELECT
        id,name,sort,is_show,del_flag,crete_time,modify_time,del_time
        FROM cms_help_cate
        WHERE del_flag = '0'
        <if test="name != null and !''.equals(name)">
            AND name LIKE CONCAT(CONCAT('%',#{name}),'%')
        </if>
        ORDER BY sort
        limit #{startRowNum},#{pageSize}
    </select>

    <select id="queryHelpCategoryCount" parameterType="java.util.Map" resultType="java.lang.Integer">
        select count(1) from cms_help_cate
        where del_flag = '0'
        <if test="name != null and name != '' ">
            AND name like CONCAT(CONCAT('%', #{name}),'%')
        </if>
    </select>

    <insert id="addHelpCategory" parameterType="com.ruoyi.cms.bean.HelpCategory">
        INSERT INTO cms_help_cate (`name`,sort,is_show,crete_time) values (#{name},#{sort},#{isShow},now())
    </insert>

    <delete id="deleteHelpCategory" parameterType="java.lang.Long">
        UPDATE cms_help_cate
        SET del_flag = '1',del_time = now()
        WHERE id = #{id}
    </delete>

    <delete id="batchDeleteHelpCategory" parameterType="int">
        UPDATE cms_help_cate
        SET del_flag = '1',del_time = now()
        WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="queryHelpCategoryById" parameterType="java.lang.Long" resultMap="helpCategoryResult">
        SELECT id,name,sort,is_show,del_flag,crete_time,modify_time,del_time
        FROM cms_help_cate
        WHERE id = #{id}
    </select>

    <update id="updateHelpCategory" parameterType="com.ruoyi.cms.bean.HelpCategory">
        UPDATE cms_help_cate
        SET `name` = #{name},sort = #{sort},is_show = #{isShow},modify_time= now()
        WHERE id = #{id}
    </update>

    <select id="queryHelpAllCate" resultMap="helpCategoryResult">
        SELECT id,`name`,sort FROM cms_help_cate WHERE is_show = '0' AND del_flag = '0' ORDER BY sort
    </select>

</mapper>